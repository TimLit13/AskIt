<h1 class="mb-4"><%= @question.title %></h1>
<p>
	<%= @question.body %>
</p>
<p>
	<i>
		Created <%= @question.formatted_created_at %>
	</i>
</p>

<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-outline-secondary' %>
<%= link_to 'Delete', question_path(@question), method: :delete, data: {confirm: "Are you sure to delete #{@question.title} post?"}, class: 'btn btn-outline-danger' %>